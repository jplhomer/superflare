{
  "name": "superflare",
  "version": "0.0.22",
  "description": "A full-stack framework for Cloudflare Workers.",
  "main": "dist/index.js",
  "types": "dist/index.types.d.ts",
  "bugs": {
    "url": "https://github.com/jplhomer/superflare/issues"
  },
  "scripts": {
    "test": "vitest",
    "build": "tsup --format esm,cjs",
    "dev": "tsup --format esm,cjs --watch",
    "prepack": "pnpm build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "superflare": "bin/superflare.js"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "framework",
    "full-stack",
    "orm",
    "d1"
  ],
  "author": "Josh Larson <jplhomer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "esbuild": "^0.17.10",
    "esbuild-register": "^3.4.2",
    "gunzip-maybe": "^1.4.2",
    "npx-import": "^1.1.4",
    "pluralize": "^8.0.0",
    "tar-fs": "^2.1.1",
    "tiny-invariant": "^1.3.1",
    "wrangler": "^2.12.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@miniflare/core": "^2.12.1",
    "@miniflare/d1": "^2.12.1",
    "@miniflare/shared": "^2.12.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/better-sqlite3": "^7.6.3",
    "@types/gunzip-maybe": "^1.4.0",
    "@types/node": "^18.14.1",
    "@types/pluralize": "^0.0.29",
    "@types/tar-fs": "^2.0.1",
    "@types/yargs": "^17.0.20",
    "better-sqlite3": "^7.6",
    "tsconfig": "workspace:*",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.3"
  }
}
