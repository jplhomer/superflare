    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "tsconfig": "workspace:*",
    "typescript": "^5",
    "wrangler": "^3"
  },
