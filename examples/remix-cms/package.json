    "@remix-run/cloudflare": "^2",
    "@remix-run/react": "^2",
    "@remix-run/serve": "^2",
    "@superflare/remix": "workspace:*",
    "@tailwindcss/forms": "^0.5.3",
    "clsx": "^1.2.1",
    "highlight.js": "^11.7.0",
    "isbot": "^3.6.6",
    "marked": "^4.2.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superflare": "workspace:*",
    "textarea-markdown-editor": "^1.0.4",
    "tiny-invariant": "^1.3.1"
